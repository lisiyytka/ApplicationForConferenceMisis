<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/acc_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_roboto_medium_purple"
            android:textSize="24sp"
            android:layout_marginStart="115dp"
            android:text="Schedule"/>

    </Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/date_bg"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="30dp"
            android:layout_gravity="start"
            android:gravity="center"
            style="@style/font_roboto_regular_gray"
            android:textSize="18sp"
            android:text="03.06.21"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/font_roboto_regular_purple"
            android:textSize="24sp"
            android:text="04.06.21"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="18dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            style="@style/font_roboto_regular_gray"
            android:textSize="18sp"
            android:text="05.06.21"/>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>